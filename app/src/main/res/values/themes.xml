<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Custom font 적용 -->
    <style name="nanumTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanum_font</item>
    </style>

    <style name="nanumButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:fontFamily">@font/nanum_font</item>
    </style>

    <style name="nanumEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/nanum_font</item>
    </style>

    <style name="nanumRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/nanum_font</item>
    </style>

    <style name="nanumCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/nanum_font</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.WatchingAD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--nanum font-family 적용-->
        <item name="android:textViewStyle">@style/nanumTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/nanumButtonFontStyle</item>
        <item name="android:editTextStyle">@style/nanumEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/nanumRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/nanumCheckboxFontStyle</item>
    </style>

    <style name="Theme.WatchingAD.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!--nanum font-family 적용-->
        <item name="android:textViewStyle">@style/nanumTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/nanumButtonFontStyle</item>
        <item name="android:editTextStyle">@style/nanumEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/nanumRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/nanumCheckboxFontStyle</item>
    </style>

    <style name="ThemeOverlay.WatchingAD.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>