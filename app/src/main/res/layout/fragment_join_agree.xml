<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".login.fragment.JoinAgreeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18dp"
                android:letterSpacing="0.2"
                android:text="약관동의" />

            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:contentDescription="closeButton"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_baseline_clear_30" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/agreeTitle1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="개인정보 수집 및 이용에 대한 안내(필수)" />

        <TextView
            android:id="@+id/agreeContents1"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="start|top"
            android:background="@color/join_background_color"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColor="@color/join_text_color"
            android:scrollbarFadeDuration="0"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@color/join_text_color"
            android:scrollbarTrackVertical="@color/gray"
            android:scrollbarSize="5dp"
            android:scrollbarStyle="insideOverlay"
            android:hint="개인정보 수집 및 이용에 대한 안내"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/agreeTitle2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="서비스약관" />

        <TextView
            android:id="@+id/agreeContents2"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="start|top"
            android:background="@color/join_background_color"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColor="@color/join_text_color"
            android:scrollbarFadeDuration="0"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@color/join_text_color"
            android:scrollbarTrackVertical="@color/gray"
            android:scrollbarSize="5dp"
            android:scrollbarStyle="insideOverlay"
            android:hint="서비스약관"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/agreeCheck1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:buttonTint="@color/black"
            android:textColor="@color/black"
            android:text="개인정보 수집 및 이용에 대한 안내를 이해하였으며 동의합니다." />

        <CheckBox
            android:id="@+id/agreeCheck2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:buttonTint="@color/black"
            android:textColor="@color/black"
            android:text="서비스 약관에 대한 내용을 이해하였으며 동의합니다." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnNextStep"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:background="@drawable/signature_normal_top_round_button"
            android:textSize="18dp"
            android:letterSpacing="0.2"
            android:text="다음" />

    </LinearLayout>

</LinearLayout>